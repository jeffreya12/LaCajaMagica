<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
  android:background="@drawable/fondo_laberinto"
  tools:context="cr.ac.tec.la_caja_magica.GameLogic.DifficultySelection">

    <Button
      android:id="@+id/buttonFacil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_marginRight="30dp"
        android:layout_alignTop="@+id/buttonIntermedio"
        android:layout_toLeftOf="@+id/buttonIntermedio"
        android:layout_toStartOf="@+id/buttonIntermedio"
      android:background="@drawable/button_large"
      android:onClick="startEasyGame"
      android:text="Facil"/>

    <Button
      android:id="@+id/buttonIntermedio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
      android:background="@drawable/button_large"
      android:onClick="startMediumGame"
      android:text="Intermedio"/>

    <Button
      android:id="@+id/buttonDificil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_marginLeft="30dp"
        android:layout_alignTop="@+id/buttonIntermedio"
        android:layout_toEndOf="@+id/buttonIntermedio"
      android:layout_toRightOf="@+id/buttonIntermedio"
      android:background="@drawable/button_large"
      android:onClick="startHardGame"
      android:text="Dificil"/>

    <TextView
      android:id="@+id/textViewDificultad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:text="Seleccione una difficulty"
      android:textAppearance="?android:attr/textAppearanceLarge"/>
</RelativeLayout>

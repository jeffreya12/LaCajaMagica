<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
  android:background="@drawable/fondo_parque_patinar"
  tools:context="cr.ac.tec.la_caja_magica.GameLogic.CharacterSelection">

    <ImageButton
      android:id="@+id/imageButtonHombre"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textViewTituloSeleccionarPersonajes"
      android:layout_toStartOf="@+id/textViewTituloSeleccionarPersonajes"
      android:background="@drawable/boy_a"
      android:onClick="selectMale"/>

    <ImageButton
      android:id="@+id/imageButtonMujer"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/imageButtonHombre"
      android:layout_toEndOf="@+id/textViewTituloSeleccionarPersonajes"
        android:layout_toRightOf="@+id/textViewTituloSeleccionarPersonajes"
      android:background="@drawable/girl_flip"
      android:onClick="selectFemale"/>

    <TextView
      android:id="@+id/textViewTituloSeleccionarPersonajes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:text="Seleccione un personaje"
      android:textAppearance="?android:attr/textAppearanceLarge"/>


</RelativeLayout>
